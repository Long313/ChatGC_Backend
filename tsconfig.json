{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": false,
    "strictNullChecks": true,
    "paths": {
      "modules/*": ["./src/modules/*"],
      "common/*": ["./src/common/*"],
      "decorators": ["./src/decorators"],
      "decorators/*": ["./src/decorators/*"],
      "shared/*": ["./src/shared/*"],
      "providers/*": ["./src/providers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
